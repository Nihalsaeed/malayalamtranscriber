<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiteRT Audio Transcriber"
        android:textColor="#0ea5e9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Neon Blue Buttons with Black Text -->
    <Button
        android:id="@+id/btnLoadModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initialize LiteRT Model"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#0ea5e9"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <Button
        android:id="@+id/btnPickAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Audio File"
        android:enabled="false"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#0ea5e9"
        app:layout_constraintTop_toBottomOf="@id/btnLoadModel"/>

    <Button
        android:id="@+id/btnRecordAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record Audio (Hold / Tap)"
        android:enabled="false"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#0ea5e9"
        app:layout_constraintTop_toBottomOf="@id/btnPickAudio"/>

    <TextView
        android:id="@+id/tvSelectedFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textColor="#0ea5e9"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRecordAudio"/>

    <!-- Input Box styling for dark theme -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prompt"
        android:textColorHint="#0ea5e9"
        app:boxStrokeColor="#0ea5e9"
        app:hintTextColor="#0ea5e9"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedFile">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transcribe this Malayalam audio"
            android:textColor="#0ea5e9"
            android:background="#1A1A1A"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run Inference"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#0ea5e9"
        app:layout_constraintTop_toBottomOf="@id/inputLayout"/>

    <!-- Result ScrollView with black background -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRun"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result will appear here..."
            android:textColor="#0ea5e9"
            android:fontFamily="monospace"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>